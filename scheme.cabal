name:                scheme
version:             0.1.0.0
synopsis:            Initial project template from stack
description:         Please see README.md
homepage:            https://github.com/githubuser/scheme#readme
license:             BSD3
license-file:        LICENSE
author:              Author name here
maintainer:          example@example.com
copyright:           2016 Author name here
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10
data-files:          lib/stdlib.scm

library
  hs-source-dirs:      src
  exposed-modules:     Language.Scheme
                       Language.Scheme.Desugarer
                       Language.Scheme.Env
                       Language.Scheme.Evaluator
                       Language.Scheme.Pretty
                       Language.Scheme.Primitives
                       Language.Scheme.Reader
                       Language.Scheme.Types
  other-modules:       Paths_scheme
  build-depends:       array
                     , base >= 4.7 && < 5
                     , case-insensitive
                     , mtl
                     , megaparsec
                     , pretty
  default-language:    Haskell2010

executable schemei
  hs-source-dirs:      schemei
  main-is:             Main.hs
  other-modules:       ReplM
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , directory
                     , filepath
                     , haskeline
                     , mtl
                     , transformers
                     , scheme
  default-language:    Haskell2010

executable schemefmt
  hs-source-dirs:      schemefmt
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , mtl
                     , scheme
  default-language:    Haskell2010

test-suite scheme-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       array
                     , base
                     , directory
                     , filepath
                     , hspec
                     , QuickCheck
                     , scheme
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/scheme
